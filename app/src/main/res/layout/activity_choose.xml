<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#451f3300"
        android:orientation="vertical"
        tools:context=".WorkFlow.choose">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to Buyer"
            android:layout_marginLeft="100sp"
            android:layout_marginTop="50sp"
            android:textSize="20dp"
            android:textColor="#000a22"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="50sp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="70sp"
                    android:text="BookName    :"
                    android:id="@+id/textView1"
                    android:textSize="20sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BookName    "
                    android:layout_marginLeft="10sp"
                    android:id="@+id/textView2"
                    android:textSize="20sp"/></LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AuthorName :"
                    android:layout_marginLeft="70sp"
                    android:id="@+id/textView3"
                    android:textSize="20sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AuthorName "
                    android:layout_marginLeft="10sp"
                    android:id="@+id/textView4"
                    android:textSize="20sp"/></LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Publications :"
                    android:layout_marginLeft="70sp"
                    android:id="@+id/textView5"
                    android:textSize="20sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Publications "
                    android:layout_marginLeft="10sp"
                    android:id="@+id/textView6"
                    android:textSize="20sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price              :"
                    android:layout_marginLeft="70sp"
                    android:id="@+id/textView7"
                    android:textSize="20sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price      "
                    android:id="@+id/textView8"
                    android:layout_marginLeft="10sp"
                    android:textSize="20sp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Books"
                android:id="@+id/button1"
                android:background="@color/colorPrimary"
                android:textColor="#022"
                android:layout_marginLeft="60sp"
                android:layout_marginTop="100sp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buy"
                android:id="@+id/button2"
                android:background="@color/colorAccent"
                android:textColor="#022"
                android:layout_marginLeft="30sp"
                android:layout_marginTop="100sp"
                android:layout_marginBottom="100sp"/></LinearLayout>
    </LinearLayout>



